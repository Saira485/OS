#include <iostream>
using namespace std;

int main() {

    int n, tq;
    cout << "Enter number of processes: ";
    cin >> n;

    int at[n], bt[n], rt[n], ct[n], tat[n], wt[n];

    // Input
    for(int i=0;i<n;i++) {
        cout << "\nProcess P" << i+1 << endl;
        cout << "Arrival Time: ";
        cin >> at[i];
        cout << "Burst Time: ";
        cin >> bt[i];
        rt[i] = bt[i]; // remaining time
    }

    cout << "\nEnter Time Quantum: ";
    cin >> tq;

    int time = 0, completed = 0;

    while(completed < n) {

        bool executed = false;

        for(int i=0;i<n;i++) {

            if(rt[i] > 0 && at[i] <= time) {

                executed = true;

                if(rt[i] > tq) {
                    time += tq;
                    rt[i] -= tq;
                }
                else {
                    time += rt[i];
                    ct[i] = time;
                    rt[i] = 0;
                    completed++;
                }
            }
        }

        // If CPU idle
        if(executed == false)
            time++;
    }

    // Calculate TAT and WT
    for(int i=0;i<n;i++) {
        tat[i] = ct[i] - at[i];
        wt[i] = tat[i] - bt[i];
        if(wt[i] < 0) wt[i] = 0;
    }

    // Output
    cout << "\nP\tAT\tBT\tCT\tWT\tTAT\n";
    float avgWT=0, avgTAT=0;

    for(int i=0;i<n;i++) {
        cout << "P" << i+1 << "\t" << at[i] << "\t" << bt[i] << "\t"
             << ct[i] << "\t" << wt[i] << "\t" << tat[i] << endl;

        avgWT += wt[i];
        avgTAT += tat[i];
    }

    cout << "\nAverage Waiting Time = " << avgWT/n;
    cout << "\nAverage Turnaround Time = " << avgTAT/n;

    return 0;
}
